    <select id="searchBroadcastList" resultType="broadCastListVO">
    SELECT *
    FROM(
        SELECT ROWNUM AS SEQ, H.*
        FROM(
            SELECT ROW_NUMBER() OVER(ORDER BY RECEIPT_DT ASC) AS RNUM, G.*
            FROM(

                SELECT 
                       A.RECEIPT_ID
                     , REGEXP_REPLACE(A.R_TEL ,'([[:digit:]]{'||
                       DECODE(SUBSTR(A.R_TEL,0,2),'02',2,3)||'})([[:digit:]]{3,4})([[:digit:]]{4})','\1-\2-\3') AS R_TEL
                     , A.FLAG_BROD
                     , TO_CHAR(TO_DATE(A.RECEIPT_TIME,'HH24MI'),'HH24:MI') AS RECEIPT_TIME
                     , A.RECEIPT_DAY||A.RECEIPT_TIME AS RECEIPT_DT
                     , TO_CHAR(TO_DATE(A.BROAD_TIME,'YYYYMMDDHH24MISS'),'HH24:MI') AS BROAD_TIME
                     , A.REPORT_TYPE
                     , B.BAS_NAME
                     , A.INDIVIDUAL_NAME
                     , C.TYPE_NAME
                     , A.MEMO
                     , A.RECEIPT_DAY
                     , A.FLAG_IMPORTANT
                     , B.F_COLOR
                     , B.B_COLOR
                     , D.CITY AS AREA_NAME
                FROM (
                    SELECT * FROM REPORT_RECEIPT_TODAY
                    WHERE 1 = 1
                        <if test="REPORT_TYPE != null and REPORT_TYPE != ''">
                            AND REPORT_TYPE = #{REPORT_TYPE}
                        </if>
                        <if test="REPORT_TYPE2 != null and REPORT_TYPE2 != '' and REPORT_TYPE2 != 'null'">
                            AND REPORT_TYPE2 = #{REPORT_TYPE2}
                        </if>
                        <if test="AREA_CODE != null and AREA_CODE != ''">
                            AND REGION_ID = #{AREA_CODE}
                        </if>
                        <if test="INDIVIDUAL_TYPE != null and INDIVIDUAL_TYPE != ''">
                            AND INDIVIDUAL_TYPE = #{INDIVIDUAL_TYPE}
                        </if>
                        <if test="FLAG_BROD != null and FLAG_BROD != ''">
                            <if test="FLAG_BROD == 'N'">
                                AND FLAG_BROD = 'N'
                            </if>
                            <if test="FLAG_BROD == 'Y'">
                                <![CDATA[ AND FLAG_BROD <> 'N' ]]>
                            </if>
                        </if>
                        <if test="FLAG_IMPORTANT != null and FLAG_IMPORTANT != ''">
                            <if test="FLAG_IMPORTANT == 'N'">
                                AND FLAG_IMPORTANT = 'N'
                            </if>
                            <if test="FLAG_IMPORTANT == 'Y'">
                                <![CDATA[ AND FLAG_IMPORTANT <> 'N' ]]>
                            </if>
                        </if>
                        <if test="CONTENT != null and CONTENT != ''">
                            AND MEMO LIKE '%'||#{CONTENT}||'%'
                        </if>
                ) A
                LEFT JOIN CODE_REPORT_TYPE B ON A.REPORT_TYPE = B.BAS_SCOD
                LEFT JOIN CODE_INFORMER_TYPE C ON A.INDIVIDUAL_TYPE = C.TYPE_ID
                LEFT JOIN CODE_AREACODE D ON A.REGION_ID = D.AREA_CODE
                WHERE A.RECEIPT_DAY = TO_CHAR(SYSDATE,'YYYYMMDD')
                  AND B.BAS_LCOD = '100'
                  AND A.FLAG_SEND = 'Y'

                UNION ALL

                SELECT 
                       A.RECEIPT_ID
                     , REGEXP_REPLACE(
                           A.PHONE_CELL,
                           '([[:digit:]]{'||DECODE(SUBSTR(A.PHONE_CELL,0,2),'02',2,3)||'})([[:digit:]]{3,4})([[:digit:]]{4})',
                           '\1-\2-\3'
                       ) AS R_TEL
                     , A.FLAG_BROD
                     , TO_CHAR(TO_DATE(A.RECEIPT_TIME,'HH24MI'),'HH24:MI') AS RECEIPT_TIME
                     , A.RECEIPT_DAY||A.RECEIPT_TIME AS RECEIPT_DT
                     , TO_CHAR(TO_DATE(A.BROAD_TIME,'YYYYMMDDHH24MISS'),'HH24:MI') AS BROAD_TIME
                     , A.REPORT_TYPE
                     , B.BAS_NAME
                     , A.INFORMER_NAME AS INDIVIDUAL_NAME
                     , ' ' AS TYPE_NAME
                     , A.COMMENT_TXT AS MEMO
                     , A.RECEIPT_DAY
                     , A.FLAG_IMPORTANT
                     , ' ' AS F_COLOR
                     , ' ' AS B_COLOR
                     , D.CITY AS AREA_NAME
                FROM (
                    SELECT * FROM RECEIPT_APP
                    WHERE 1 = 1
                        <if test="REPORT_TYPE != null and REPORT_TYPE != ''">
                            AND REPORT_TYPE = #{REPORT_TYPE}
                        </if>
                        <if test="REPORT_TYPE2 != null and REPORT_TYPE2 != '' and REPORT_TYPE2 != 'null'">
                            AND REPORT_TYPE2 = #{REPORT_TYPE2}
                        </if>
                        <if test="AREA_CODE != null and AREA_CODE != ''">
                            AND AREA_CODE = #{AREA_CODE}
                        </if>
                        <if test="INDIVIDUAL_TYPE != null and INDIVIDUAL_TYPE != ''">
                            AND INFORMER_TYPE = #{INDIVIDUAL_TYPE}
                        </if>
                        <if test="FLAG_BROD != null and FLAG_BROD != ''">
                            <if test="FLAG_BROD == 'N'">
                                AND FLAG_BROD = 'N'
                            </if>
                            <if test="FLAG_BROD == 'Y'">
                                <![CDATA[ AND FLAG_BROD <> 'N' ]]>
                            </if>
                        </if>
                        <if test="FLAG_IMPORTANT != null and FLAG_IMPORTANT != ''">
                            <if test="FLAG_IMPORTANT == 'N'">
                                AND FLAG_IMPORTANT = 'N'
                            </if>
                            <if test="FLAG_IMPORTANT == 'Y'">
                                <![CDATA[ AND FLAG_IMPORTANT <> 'N' ]]>
                            </if>
                        </if>
                        <if test="CONTENT != null and CONTENT != ''">
                            AND COMMENT_TXT LIKE '%'||#{CONTENT}||'%'
                        </if>
                ) A
                LEFT JOIN CODE_REPORT_TYPE B ON A.REPORT_TYPE = B.BAS_SCOD
                LEFT JOIN CODE_AREACODE D ON A.AREA_CODE = D.AREA_CODE
                WHERE A.RECEIPT_DAY = TO_CHAR(SYSDATE,'YYYYMMDD')
                  AND B.BAS_LCOD = '100'
                  AND A.FLAG_SEND = 'Y'

            ) G
            ORDER BY RNUM DESC
        ) H
    )
    <![CDATA[
    WHERE SEQ > #{startRow} AND SEQ <= (#{startRow} + #{size})
    ]]>
</select>
    
    
    
    
    
    

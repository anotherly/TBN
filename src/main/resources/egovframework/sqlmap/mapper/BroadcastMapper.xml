    <select id="selectTodaysList" resultType="broadCastListVO">
	    SELECT * 
	    FROM(
	        SELECT ROWNUM AS SEQ, H.* 
	        FROM(
	            SELECT ROW_NUMBER() OVER(ORDER BY RECEIPT_DT ASC) AS RNUM, G.* 
	            FROM(
	                SELECT 
	                       A.RECEIPT_ID
	                     , REGEXP_REPLACE(A.R_TEL ,'([[:digit:]]{'||
	                       DECODE(SUBSTR(A.R_TEL,0,2),'02',2,3)||'})([[:digit:]]{3,4})([[:digit:]]{4})','\1-\2-\3') AS R_TEL
	                     , A.FLAG_BROD
	                     , TO_CHAR(TO_DATE(A.RECEIPT_TIME , 'HH24MI') , 'HH24:MI') AS RECEIPT_TIME
	                     , TO_CHAR(TO_DATE(A.BROAD_TIME , 'YYYYMMDDHH24MISS'),'HH24:MI') AS BROAD_TIME 
	                     , A.RECEIPT_DAY||A.RECEIPT_TIME AS RECEIPT_DT
	                     , A.REPORT_TYPE
	                     , B.BAS_NAME
	                     , A.INDIVIDUAL_NAME
	                     , C.TYPE_NAME
	                     , A.MEMO
	                     , A.RECEIPT_DAY
	                     , D.CITY AS AREA_NAME
	                     , A.FLAG_IMPORTANT
	                     , B.F_COLOR
	                     , B.B_COLOR
	                     , A.FLAG_KNEX
	                FROM REPORT_RECEIPT_TODAY A
	                LEFT JOIN CODE_REPORT_TYPE B
	                    ON A.REPORT_TYPE = B.BAS_SCOD
	                LEFT JOIN CODE_INFORMER_TYPE C
	                    ON A.INDIVIDUAL_TYPE = C.TYPE_ID
	                LEFT JOIN CODE_AREACODE D
	                    ON A.REGION_ID = D.AREA_CODE
	                WHERE B.BAS_LCOD = '100'
	                  AND A.RECEIPT_DAY = TO_CHAR(SYSDATE,'YYYYMMDD')
	                  <if test="!AREA_CODE.equals('080')">
	                    AND A.REGION_ID = #{AREA_CODE}
	                  </if>
	                  AND A.FLAG_SEND = 'Y'
	
	                UNION ALL
	
	                SELECT 
	                       A.RECEIPT_ID
	                     , REGEXP_REPLACE(
							    A.PHONE_CELL,
							    '([[:digit:]]{' || DECODE(SUBSTR(A.PHONE_CELL,0,2),'02',2,3) || '})([[:digit:]]{3,4})([[:digit:]]{4})',
							    '\1-\2-\3'
							) AS R_TEL
	                     , A.FLAG_BROD
	                     , TO_CHAR(TO_DATE(A.RECEIPT_TIME , 'HH24MI') , 'HH24:MI') AS RECEIPT_TIME
	                     , TO_CHAR(TO_DATE(A.BROAD_TIME , 'YYYYMMDDHH24MISS'),'HH24:MI') AS BROAD_TIME 
	                     , A.RECEIPT_DAY||A.RECEIPT_TIME AS RECEIPT_DT
	                     , A.REPORT_TYPE
	                     , B.BAS_NAME
	                     , A.INFORMER_NAME
	                     , ' ' AS TYPE_NAME
	                     , A.COMMENT_TXT
	                     , A.RECEIPT_DAY
	                     , D.CITY AS AREA_NAME
	                     , A.FLAG_IMPORTANT
	                     , ' ' AS F_COLOR
	                     , ' ' AS B_COLOR
	                     , ' ' AS FLAG_KNEX
	                FROM RECEIPT_APP A
	                LEFT JOIN CODE_REPORT_TYPE B
	                    ON A.REPORT_TYPE = B.BAS_SCOD
	                LEFT JOIN CODE_AREACODE D
	                    ON A.AREA_CODE = D.AREA_CODE
	                WHERE B.BAS_LCOD = '100'
	                  AND A.RECEIPT_DAY = TO_CHAR(SYSDATE,'YYYYMMDD')
	                  <if test="!AREA_CODE.equals('080')">
	                    AND A.AREA_CODE = #{AREA_CODE}
	                  </if>
	                  AND A.FLAG_SEND = 'Y'
	            ) G
	            ORDER BY RNUM DESC
	        ) H
	    )
	    <![CDATA[
	    WHERE SEQ > #{startRow} AND SEQ <= (#{startRow} + #{size})
	    ]]>
	</select>

    

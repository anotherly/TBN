	<select id="countSearchBroadcastList" resultType="int">

	    SELECT COUNT(*)
	    FROM (
	        SELECT RECEIPT_ID
	        FROM REPORT_RECEIPT_TODAY
	        WHERE 1 = 1
	          AND FLAG_SEND = 'Y'
	          AND RECEIPT_DAY = TO_CHAR(SYSDATE,'YYYYMMDD')
	
	            <if test="REPORT_TYPE != null and REPORT_TYPE != ''">
	                AND REPORT_TYPE = #{REPORT_TYPE}
	            </if>
	            <if test="REPORT_TYPE2 != null and REPORT_TYPE2 != ''">
	                AND REPORT_TYPE2 = #{REPORT_TYPE2}
	            </if>
	            <if test="AREA_CODE != null and AREA_CODE != ''">
	                AND REGION_ID = #{AREA_CODE}
	            </if>
	            <if test="!INDIVIDUAL_TYPE.equals('') and INDIVIDUAL_TYPE != null">
	                AND INDIVIDUAL_TYPE = #{INDIVIDUAL_TYPE}
	            </if>
	
	            <if test="FLAG_BROD != null and FLAG_BROD != ''">
	                <if test='FLAG_BROD == "N"'>
	                    AND FLAG_BROD = 'N'
	                </if>
	                <if test='FLAG_BROD == "Y"'>
	                    <![CDATA[ AND FLAG_BROD <> 'N' ]]>
	                </if>
	            </if>
	
	            <if test="FLAG_IMPORTANT != null and FLAG_IMPORTANT != ''">
	                <if test='FLAG_IMPORTANT == "N"'>
	                    AND FLAG_IMPORTANT = 'N'
	                </if>
	                <if test='FLAG_IMPORTANT == "Y"'>
	                    <![CDATA[ AND FLAG_IMPORTANT <> 'N' ]]>
	                </if>
	            </if>
	
	            <if test="CONTENT != null and CONTENT != ''">
	                AND MEMO LIKE '%'||#{CONTENT}||'%'
	            </if>
	
	        UNION ALL
	
	        SELECT RECEIPT_ID
	        FROM RECEIPT_APP
	        WHERE 1 = 1
	          AND FLAG_SEND = 'Y'
	          AND RECEIPT_DAY = TO_CHAR(SYSDATE,'YYYYMMDD')
	
	            <if test="REPORT_TYPE != null and REPORT_TYPE != ''">
	                AND REPORT_TYPE = #{REPORT_TYPE}
	            </if>
	            <if test="REPORT_TYPE2 != null and REPORT_TYPE2 != ''">
	                AND REPORT_TYPE2 = #{REPORT_TYPE2}
	            </if>
	            <if test="AREA_CODE != null and AREA_CODE != ''">
	                AND AREA_CODE = #{AREA_CODE}
	            </if>
	            <if test="INDIVIDUAL_TYPE != null and INDIVIDUAL_TYPE != ''">
	                AND INFORMER_TYPE = #{INDIVIDUAL_TYPE}
	            </if>
	
	            <if test="FLAG_BROD != null and FLAG_BROD != ''">
	                <if test='FLAG_BROD == "N"'>
	                    AND FLAG_BROD = 'N'
	                </if>
	                <if test='FLAG_BROD == "Y"'>
	                    <![CDATA[ AND FLAG_BROD <> 'N' ]]>
	                </if>
	            </if>
	
	            <if test="FLAG_IMPORTANT != null and FLAG_IMPORTANT != ''">
	                <if test='FLAG_IMPORTANT == "N"'>
	                    AND FLAG_IMPORTANT = 'N'
	                </if>
	                <if test='FLAG_IMPORTANT == "Y"'>
	                    <![CDATA[ AND FLAG_IMPORTANT <> 'N' ]]>
	                </if>
	            </if>
	
	            <if test="CONTENT != null and CONTENT != ''">
	                AND COMMENT_TXT LIKE '%'||#{CONTENT}||'%'
	            </if>
	    )
	
	</select>

    
    <select id="checkBroadTime" resultType="String">
        SELECT BROAD_TIME 
        FROM REPORT_RECEIPT_TODAY 
        WHERE RECEIPT_ID = #{RECEIPT_ID}
    </select>
    
    <update id="updateBroadTime"  parameterType="java.util.List">
	    DECLARE BEGIN
        <foreach collection="list" item="item" separator=";">
	        <choose>
	            <when test="item.UPDATE_TABLE == 'RECEIPT_APP'">
	                UPDATE RECEIPT_APP
	            </when>
	            <otherwise>
	                UPDATE REPORT_RECEIPT_TODAY
	            </otherwise>
	        </choose>
	        SET BROAD_TIME = TO_CHAR(SYSDATE,'YYYYMMDDHH24MISS')
	        WHERE RECEIPT_ID =
	        <!-- 220905 수정 신지형 대리 :
	        	긴급제보의 경우 최초방송시간 유지 
	        	일괄적으로 최초방송시간 존재시 방송시간 업데이트 X--> 
	        (
	        	<choose>
		            <when test="item.UPDATE_TABLE == 'RECEIPT_APP'">
		                SELECT RECEIPT_ID FROM RECEIPT_APP
		            </when>
		            <otherwise>
		                SELECT RECEIPT_ID FROM REPORT_RECEIPT_TODAY
		            </otherwise>
		        </choose>
	       		WHERE 
	       		RECEIPT_ID = #{item.RECEIPT_ID}
	       		AND 

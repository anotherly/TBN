    <select id="countBroadcastList" resultType="int">
	    SELECT
			    (SELECT COUNT(*) 
			       FROM REPORT_RECEIPT_TODAY 
			      WHERE RECEIPT_DAY= to_char(sysdate,'YYYYMMDD')
